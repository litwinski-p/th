{
    "name": "th/technical-task",
    "description": "Technical task for ThinkHuge",
    "type": "project",
    "require": {
        "php": "^8.5",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "Th\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse --memory-limit=512M --debug src public",
        "format": "pint",
        "format:check": "pint --test"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": {
            "*": "dist"
        },
        "optimize-autoloader": true,
        "platform-check": true,
        "secure-http": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
